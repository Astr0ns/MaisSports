<body>

    <%- include("../partial/header-home") %>

    <section class="area-login">

        <section class="sub-og">
            <section class="login">

                <h1>REGISTRE-SE</h1>

                <form>
                    <section class="form-group">
                        <h3 class="lr">Digite seu nome completo</h3>
                        <label for="name"></label>
                        <input id="name" type="text" name="nome" placeholder="Digite seu nome" required>
                    </section>

                    <section class="form-group">
                        <h3 class="lr">Digite seu E-mail</h3>
                        <label for="email"></label>
                        <input id="email" type="text" name="email" placeholder="Digite seu email" required>
                    </section>

                    <section class="form-group">
                        <h3 class="lr">Digite sua Senha</h3>
                        <label for="password"></label>
                        <input id="password" type="password" name="senha" placeholder="Digite sua senha" required
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}" title="Adicione no Minímo uma letra maiúscula, uma caracter especial e um número">
                    </section>
                    <section id="valid"></section>
                    <section class="text-center">
                        <button type="submit" onclick="saveData()" class="btn btn-primary" id="save-btn" required>Entrar</button>
                    </section>
                    <section id="valid-sucess"></section>

                </form>

                <p>Já tem uma conta?<a href="login.html">Faça Login</a>.</p>


            </section>
        </section>
    </section>

    <%- include("../partial/footer") %>

    <script src="js/script.js"></script>
    <script src="js/validation-1.js"></script>
    <script src="js/create-account.js"></script>
